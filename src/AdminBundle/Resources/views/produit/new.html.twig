{% extends "::admin.html.twig" %}
{% block breadcrumb %}<li><a href="{{ path('produit_index') }}">Produits</a></li><li class="active">Ajout d'un nouveau produit</li>{% endblock %}
{% block title %} Ajout d'un nouveau produit {% endblock %}
{% block body %}
    
            <div class="col-xs-12">
                {{ form_start(form) }}
                    {% for pL in form.produitLang %}
                        <div class="rowLang {% if loop.index>1 %}hide{% endif %}" id="{{pL.lang.vars.value}}">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-12 colLang">
                                            {{ form_row(pL.lang) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <div class="col-xs-12">
                                        {{ form_row(pL.titre) }}
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                        {{ form_row(pL.description) }}
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                        {{ form_row(pL.descriptionApport) }}
                                    </div>
                                    <div class="col-xs-12">
                                        {{ form_row(pL.dressageType) }}
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    {% endfor %}
                    <div class="col-xs-12 col-md-6">
                        {{ form_row(form.categorieProduit) }}
                    </div>
                    <div class="col-xs-12 col-md-6">
                        {{ form_row(form.apportNutritionnelUnitaire) }}
                    </div>
                    <div class="col-xs-12 col-md-6">
                        {{ form_row(form.coefficient) }}
                    </div>
                    <div class="col-xs-12 col-md-6">
                        {{ form_row(form.imageName) }}
                    </div>
                    <div class="col-xs-12 text-center">
                        <input type="submit" value="Enregistrer" class="btn btn-success"/>
                    </div>
                {{ form_end(form) }}
            </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/froala_editor.min.js') }}"></script>
    <script src="{{ asset('js/admin/produit.js') }}"></script>
{% endblock %}