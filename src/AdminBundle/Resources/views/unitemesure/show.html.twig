{% extends "::admin.html.twig" %}

{% block body %}
    <h1>Unitemesure</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ uniteMesure.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ uniteMesure.nom }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ uniteMesure.auteur }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if uniteMesure.dateCreation %}{{ uniteMesure.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unitemesure_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('unitemesure_edit', { 'id': uniteMesure.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
