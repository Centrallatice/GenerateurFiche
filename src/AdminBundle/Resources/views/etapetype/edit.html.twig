{% extends "::admin.html.twig" %}
{% block breadcrumb %}<li><a href="{{ path('etapetype_index') }}">Ã‰tape Type</a></li><li class="active">Modification de {{etapeType.etapesTypesLang.0.titre}}</li>{% endblock %}
{% block title %} Modification de {{dump(etapeType.etapesTypesLang.0.titre)}} {% endblock %}
{% block body %}
    <div class="col-xs-12">
        {{ form_start(edit_form) }}
            <div class="row">         
                <div class="col-xs-12"> 
                    {{ form_row(edit_form.categorieEtapeType) }}
                </div>
            </div>
            <hr />
            {% for etL in edit_form.EtapeTypeLang %}
                <div class="row rowEtape {% if loop.index>1 %}hide{% endif %}" id="{{etL.lang.vars.value}}">
                    <div class="col-xs-10">
                        {{ form_row(etL.titre) }}
                    </div>
                    <div class="col-xs-2 colLang">
                        {{ form_row(etL.lang)}}
                    </div>
                    <div class="col-xs-12">
                        {{ form_row(etL.contenu) }}
                    </div>
                </div>        
            {% endfor %}
        <div class="row"> 
            <div class="col-xs-12 text-center">
                 <input type="submit" value="Enregistrer" class="btn btn-success"/>
             </div>
        </div>
    {{ form_end(edit_form) }}
{% endblock %}
{% block javascripts %}
    {{parent()}}
