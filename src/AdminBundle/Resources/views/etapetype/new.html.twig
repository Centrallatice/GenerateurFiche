{% extends "::admin.html.twig" %}
{% block breadcrumb %}<li><a href="{{ path('etapetype_index') }}">étape type</a></li>
    <li class="active">Ajout d'une nouvelle étape type</li>{% endblock %}
{% block title %}Ajout d'une nouvelle étape type{% endblock %}
{% block body %}
    <div class="col-xs-12">
        {{ form_start(form) }}
            <div class="row">         
                <div class="col-xs-12"> 
                    {{ form_row(form.categorieEtapeType) }}
                </div>
            </div>
            <hr />
            {% for etL in form.EtapeTypeLang %}
                <div class="row rowEtape {% if loop.index>1 %}hide{% endif %}" id="{{etL.lang.vars.value}}">
                    <div class="col-xs-10">
                        {{ form_row(etL.titre) }}
                    </div>
                    <div class="col-xs-2 colLang">
                        {{ form_row(etL.lang)}}
                    </div>
                    <div class="col-xs-12">
                        {{ form_row(etL.contenu) }}
                    </div>
                </div>        
            {% endfor %}
        <div class="row"> 
            <div class="col-xs-12 text-center">
                 <input type="submit" value="Enregistrer" class="btn btn-success"/>
             </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/admin/etapeType.js') }}"></script>
{% endblock %}